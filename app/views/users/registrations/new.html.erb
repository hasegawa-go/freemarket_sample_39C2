<%= render'layouts/login_header' %>
<div class= "login">
  <div class= "registration">
    <div class= "registration__title">会員情報入力
    </div>
    <div class= "registration__contents">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>


        <%= f.label "ニックネーム", class: "registration__contents__required" %>
        <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", placeholder: "例）メルカリ花子", class: "login__field registration__contents__field" %>


        <%= f.label "メールアドレス", class: "registration__contents__required" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "login__field registration__contents__field" %>


        <%= f.label "パスワード", class: "registration__contents__required" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード６文字以上", class: "login__field registration__contents__field" %>


        <%= f.label "パスワード（確認）", class: "registration__contents__required" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード6文字以上", class: "login__field registration__contents__field" %>


        <div class="g-recaptcha login-captcha" data-sitekey="6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc">
          <div style="width: 304px; height: 78px;">
            <div>
              <iframe src="https://www.google.com/recaptcha/api2/anchor?ar=1&amp;k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&amp;co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&amp;hl=ja&amp;v=v1542004393985&amp;size=normal&amp;cb=rpt8q8e1vxj2" width="304" height="78" role="presentation" name="a-w0x9bnq0oemn" frameborder="0" scrolling="no" sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox">
              </iframe>
            </div>
            <textarea id="g-recaptcha-response" name="g-recaptcha-response" class="g-recaptcha-response" style="width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;">
            </textarea>
          </div>
          <p class= "error-text">選択してください</p>
        </div>
        <%= f.submit "次へ進む" , class:"login__button login__button__next" %>
      <% end %>
    </div>
  </div>
</div>
<%= render'layouts/login_footer' %>
