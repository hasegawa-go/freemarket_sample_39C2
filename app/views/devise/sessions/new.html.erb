
<%= render 'layouts/login_header' %>
<div class="login">
  <div class="login__main">
    <div class="login__main__top">
      <p>アカウントをお持ちでない方はこちら</p>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "新規会員登録", new_registration_path(resource_name), class: "login__button login__button__no-account" %>
      <% end -%>
    </div>
    <div class="login__main__sns">
      <%= link_to user_facebook_omniauth_authorize_path, class: "login__button login__button__fb" do %>
        <%=fa_icon 'facebook-square' %> Facebookでログイン
      <% end %>
      <%= link_to user_google_oauth2_omniauth_authorize_path, class: "login__button login__button__google" do %>
        <%=fa_icon 'google-plus-square' %> Googleでログイン
      <% end %>
      <div class="login__main__with-account">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス"%>
          <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード" %>
          <div class="g-recaptcha login-captcha" data-sitekey="6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc">
            <div style="width: 304px; height: 78px;">
              <div>
                <iframe src="https://www.google.com/recaptcha/api2/anchor?ar=1&amp;k=6LfZGCYTAAAAAHoK-s7Lg5OdYg5Fq4susvALmZoc&amp;co=aHR0cHM6Ly93d3cubWVyY2FyaS5jb206NDQz&amp;hl=ja&amp;v=v1542004393985&amp;size=normal&amp;cb=rpt8q8e1vxj2" width="304" height="78" role="presentation" name="a-w0x9bnq0oemn" frameborder="0" scrolling="no" sandbox="allow-forms allow-popups allow-same-origin allow-scripts allow-top-navigation allow-modals allow-popups-to-escape-sandbox">
                </iframe>
              </div>
              <textarea id="g-recaptcha-response" name="g-recaptcha-response" class="g-recaptcha-response" style="width: 250px; height: 40px; border: 1px solid rgb(193, 193, 193); margin: 10px 25px; padding: 0px; resize: none; display: none;">
              </textarea>
            </div>
            <p class="error-text">
            選択してください
            </p>
          </div>
          <%= f.submit "ログイン" , class:"login__button login__button__submit "%>
        <% end %>
        <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "パスワードをお忘れの方", new_password_path(resource_name), class:"forget-password" %><br />
        <% end -%>
      </div>
    </div>
  </div>
</div>
  <%= render 'layouts/login_footer' %>
